{% if pageCount > 1 %}
    <nav aria-label="Pagination">
        {% set classAlign = (align is defined) ? " text-#{align}" : '' %}
        <ul class="pagination{{ classAlign }}">

            {% if previous is defined %}
                <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}">
                <li class="pagination-previous">
                    {{ 'Précédant'|trans({}, 'KnpPaginatorBundle') }}
                </li>
                </a>             
            {% else %}
                <li class="pagination-previous disabled">
                    {{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}
                </li>
            {% endif %}

            {% if startPage > 1 %}
                <a href="{{ path(route, query|merge({(pageParameterName): 1}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}"><li>1</li></a>       
                {% if startPage == 3 %}
                    <a href="{{ path(route, query|merge({(pageParameterName): 2}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}"><li>2</li>
                    </a>                   
                {% elseif startPage != 2 %}
                    {# <li class="ellipsis"></li> #}
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <a href="{{ path(route, query|merge({(pageParameterName): page}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}">
                        <li>{{ page }}</li>
                    </a>
                {% else %}
                    <li class="current">{{ page }}</li>
                {% endif %}
            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        {# <li class="ellipsis"></li> #}
                    {% else %}      
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}">
                        <li>
                            {{ pageCount -1 }}
                        </li>
                        </a>
                    {% endif %}
                {% endif %}

                <a href="{{ path(route, query|merge({(pageParameterName): pageCount}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}"><li>{{ pageCount }}</li></a> 
            {% endif %}

            {% if next is defined %}               
                <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next}))|replace({"ajax=1":"", "&ajax=1":"", "ajax=1&":""}) }}">
                    <li class="pagination-next">
                        {{ 'Suivant'|trans({}, 'KnpPaginatorBundle') }}
                    </li>
                </a>
            {% else %}
                <li class="pagination-next disabled">
                    {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}