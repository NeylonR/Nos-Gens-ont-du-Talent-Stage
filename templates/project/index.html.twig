{% extends 'base.html.twig' %}

{% block title %}Nos Projets{% endblock %}

{% block body %}
<main>
    <h1>Nos projets</h1>
    <p>Projet finito : ({{countOver}})</p>
    <p>Projet en cours : ({{countProgress}})</p>
    <p>Projet en recherche de talents : ({{countLookingFor}})</p>
    {% for project in projects %}

        {% if project.status == 'En cours' %}
            <div style='background-color:green'>
                {% include "project/projectCard.html.twig" %}
            </div>
        {% endif %}
        
        {% if project.status == 'En recherche de talents' %}
            <div style='background-color:blue'>
                {% include "project/projectCard.html.twig" %}
            </div>
        {% endif %}

        {% if project.status == 'Termin√©' %}
            <div style='background-color:red'>
                {% include "project/projectCard.html.twig" %}
            </div>
        {% endif %}

    {% endfor %}

</main>
{% endblock %}
