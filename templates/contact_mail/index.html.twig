{% extends 'base.html.twig' %}

{% block title %}Hello ContactMailController!{% endblock %}

{% block body %}
<main>
<section class="contactSection">
    {{ form_start(form, {'attr': {'class': 'formContact'}})}}
    {{ form_widget(form.firstName, {'attr': {'placeholder': 'Nom'}})}}
    {{ form_widget(form.lastName, {'attr': {'placeholder': 'Prenom'}})}}
    {{ form_widget(form.subject, {'attr': {'placeholder': 'Objet'}})}}
    {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}})}}
    {{ form_widget(form.content, {'attr': {'placeholder': 'Vos questions...'}})}}
    <button type="submit" class="button">Envoyer</button>
    {{ form_end(form) }}
</section>
</main>

{% endblock %}
